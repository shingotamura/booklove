<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-4 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
              <p>名前:  <%= user.name %></p>
            
          </div>
          <div>
              <p>好きなジャンル:  <%= user.kind %></p>
          </div>
          <div>
            <p><%= link_to 'user詳細へ', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>