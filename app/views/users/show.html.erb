<div class="row">
  <aside class="offset-sm-4">
    <div class="card text-center">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 300 }) %>" alt="">
        <h5 class="card-text">好きなジャンル：<%= @user.kind %></h5>
      </div>
          
    </div>
  </aside>
 </div>
<div class="mt-5 container">
  <div class="row text-center">
     <P class="col-sm-7"><%= link_to '投稿一覧', posts_user_path(@user), class:'btn btn-success btn-lg'%></p>
     <p><%= link_to 'お気に入り一覧', likes_user_path(@user), class:'btn btn-success btn-lg'%></p>
    </div>
</div>