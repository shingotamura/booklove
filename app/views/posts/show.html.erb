<div class="row">
  <div class="col-sm-4">
      <%= image_tag @post.image.to_s,class:'img-fluid' %>
  </div>

  <div class="offset-sm-2 col-sm-6">
    <table class="table table-striped table-borderd table-condensed">
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>著者名</th>
        <td><%= @post.author %></td>
      </tr>
      <tr>
        <th>おすすめ理由</th>
        <td><%= @post.content %></td>
      </tr>
    </table>
    <%= link_to '戻る',posts_user_path(@post.user),class:'btn btn-primary btn-lg'%>
    
  </div>

</div>